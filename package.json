{
  "name": "scratch",
  "description": "A simple sandbox app",
  "version": "0.0.1",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/mark-hennessy/scratch.git"
  },
  "keywords": [],
  "author": "Mark Hennessy <mhennessy116@gmail.com>",
  "devDependencies": {
    "babel-cli": "^6.24.0",
    "babel-core": "^6.24.0",
    "babel-eslint": "^7.2.1",
    "babel-jest": "^19.0.0",
    "babel-plugin-transform-flow-strip-types": "^6.22.0",
    "babel-preset-es2015": "^6.24.0",
    "documentation": "^4.0.0-beta.18",
    "eslint": "^3.18.0",
    "eslint-config-airbnb": "^14.1.0",
    "eslint-plugin-flowtype": "^2.30.4",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-jest": "^19.0.1",
    "eslint-plugin-jsx-a11y": "^4.0.0",
    "eslint-plugin-react": "^6.10.2",
    "flow-bin": "^0.42.0",
    "jest": "^19.0.2",
    "jsdoc-babel": "^0.3.0",
    "rimraf": "^2.6.1",
    "tslint": "^4.5.1",
    "tslint-config-airbnb": "^1.1.1",
    "typescript": "^2.2.1"
  },
  "scripts": {
    "clean": "yarn run clean:out && yarn run clean:cov && yarn run clean:docs",
    "clean:out": "rimraf out",
    "clean:cov": "rimraf coverage",
    "clean:docs": "rimraf docs",
    "flow": "flow",
    "eslint": "eslint src; exit 0",
    "eslint:changed": "git diff --name-only --diff-filter=ACMRTUB `git merge-base HEAD master` | grep '\\.js$' | xargs eslint --; exit 0",
    "tslint": "tslint --config tslint.json src/**/*.ts; exit 0",
    "test": "jest",
    "test:watch": "yarn test -- --watch",
    "test:cov": "yarn test -- --coverage",
    "build": "yarn run clean:out && babel src --out-dir out",
    "docs": "yarn run clean:docs && documentation build src/** --format html --output docs"
  }
}
